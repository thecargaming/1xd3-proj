{
  "include": [
    "**/*",
    "**/.server/**/*",
    "**/.client/**/*"
  ],
  "compilerOptions": {
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "types": [
      "node"
    ],
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "rootDirs": [
      "."
    ],
    "baseUrl": "src/",
    "paths": {
      "~/*": [
        "./app/*"
      ]
    },
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "incremental": true
  },
  "exclude": [
    "node_modules"
  ]
}
